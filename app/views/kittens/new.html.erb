<h1>Create your Kitty</h1>

<%= form_with model: @kitty do |f|%>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :age %>
    <%= f.number_field :age, min: 0 %>

    <%= f.label :cuteness %>
    <%= f.number_field :cuteness, min: 0, max: 10 %>

    <%= f.label :softness %>
    <%= f.number_field :softness, min: 0, max: 10 %>

    <%= f.submit "Create"%>
<% end %>