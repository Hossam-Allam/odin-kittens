<%= form_with model: kitten do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age, min: 0 %>

  <%= f.label :cuteness %>
  <%= f.number_field :cuteness, min: 0, max: 10 %>

  <%= f.label :softness %>
  <%= f.number_field :softness, min: 0, max: 10 %>

  <%= f.submit kitten.new_record? ? "Create" : "Update" %>
<% end %>